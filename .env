URL = https://circulation-system-server-ql2i.onrender.com/api/makerequest

/* Reset and base styles */
* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
    "Roboto", "Oxygen", "Ubuntu", "Cantarell", sans-serif;
}

/* Layout containers */
.chat-container {
  display: flex;
  height: 100vh;
  background-color: #f9fafb;
}

.sidebar {
  width: 320px;
  background-color: white;
  border-right: 1px solid #e5e7eb;
  display: flex;
  flex-direction: column;
}

.main-chat {
  flex: 1;
  display: flex;
  margin-left: 24%;
  flex-direction: column;
}

/* Sidebar header */
.sidebar-header {
  padding: 1rem;
  border-bottom: 1px solid #e5e7eb;
}

.sidebar-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 0.75rem;
}

.search-container {
  position: relative;
}

.search-icon {
  position: absolute;
  left: 0.75rem;
  top: 50%;
  transform: translateY(-50%);
  color: #9ca3af;
  width: 1rem;
  height: 1rem;
}

.search-input {
  width: 100%;
  padding-left: 2.5rem;
  padding-right: 1rem;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  border: 1px solid #d1d5db;
  border-radius: 0.5rem;
  outline: none;
}

.search-input:focus {
  ring: 2px solid #3b82f6;
  border-color: transparent;
}

/* Sidebar content */
.sidebar-content {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
}

.team-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 1rem;
}

.team-title {
  font-size: 0.875rem;
  font-weight: 500;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.team-icon {
  width: 1rem;
  height: 1rem;
  color: #9ca3af;
}

.users-list {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 0.75rem;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: background-color 0.2s;
}

.user-item:hover {
  background-color: #f9fafb;
}

.user-avatar-container {
  position: relative;
}

.user-avatar {
  width: 2.5rem;
  height: 2.5rem;
  background: linear-gradient(to right, #3b82f6, #8b5cf6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 500;
  font-size: 0.875rem;
}

.status-indicator {
  position: absolute;
  bottom: -0.25rem;
  right: -0.25rem;
  width: 1rem;
  height: 1rem;
  border-radius: 50%;
  border: 2px solid white;
}

.status-online {
  background-color: #10b981;
}

.status-away {
  background-color: #f59e0b;
}

.status-offline {
  background-color: #9ca3af;
}

.user-info {
  margin-left: 0.75rem;
  flex: 1;
}

.user-name {
  font-size: 0.875rem;
  font-weight: 500;
  color: #111827;
}

.user-status {
  font-size: 0.75rem;
  color: #6b7280;
  text-transform: capitalize;
}

/* Chat header */
.chat-header {
  background-color: white;
  border-bottom: 1px solid #e5e7eb;
  padding: 1rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chat-info {
  display: flex;
  align-items: center;
}

.chat-avatar {
  width: 2.5rem;
  height: 2.5rem;
  background: linear-gradient(to right, #10b981, #3b82f6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 500;
  margin-right: 0.75rem;
}

.chat-details h3 {
  font-size: 1.125rem;
  font-weight: 600;
  color: #1f2937;
  margin: 0;
}

.chat-details p {
  font-size: 0.875rem;
  color: #6b7280;
  margin: 0;
}

.chat-actions {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.action-button {
  padding: 0.5rem;
  color: #6b7280;
  background: none;
  border: none;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s;
}

.action-button:hover {
  color: #374151;
  background-color: #f3f4f6;
}

.action-button svg {
  width: 1.25rem;
  height: 1.25rem;
}

/* Messages area */
.messages-area {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.message-wrapper {
  display: flex;
}

.message-wrapper.own {
  justify-content: flex-end;
}

.message-wrapper.other {
  justify-content: flex-start;
}

.message-container {
  display: flex;
  max-width: 320px;
}

.message-container.own {
  flex-direction: row-reverse;
}

.message-container.other {
  flex-direction: row;
}

.message-avatar {
  width: 2rem;
  height: 2rem;
  background: linear-gradient(to right, #3b82f6, #8b5cf6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 500;
  font-size: 0.75rem;
  flex-shrink: 0;
}

.message-avatar.own {
  background: linear-gradient(to right, #10b981, #3b82f6);
  margin-left: 0.75rem;
}

.message-avatar.other {
  margin-right: 0.75rem;
}

.message-bubble {
  border-radius: 1rem;
  padding: 0.5rem 1rem;
}

.message-bubble.own {
  background-color: #3b82f6;
  color: white;
}

.message-bubble.other {
  background-color: white;
  border: 1px solid #e5e7eb;
  color: #1f2937;
}

.message-sender {
  font-size: 0.75rem;
  font-weight: 500;
  color: #6b7280;
  margin-bottom: 0.25rem;
}

.message-text {
  font-size: 0.875rem;
  line-height: 1.6;
  margin: 0;
}

.message-time {
  font-size: 0.75rem;
  margin-top: 0.25rem;
}

.message-time.own {
  color: #bfdbfe;
}

.message-time.other {
  color: #6b7280;
}

/* Typing indicator */
.typing-indicator {
  padding: 0.5rem 1rem;
  display: flex;
  align-items: center;
  font-size: 0.875rem;
  color: #6b7280;
}

.typing-dots {
  display: flex;
  gap: 0.25rem;
  margin-right: 0.5rem;
}

.typing-dot {
  width: 0.25rem;
  height: 0.25rem;
  background-color: #9ca3af;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.typing-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%,
  80%,
  100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* Message input area */
.message-input-area {
  background-color: white;
  border-top: 1px solid #e5e7eb;
  padding: 1rem;
}

.input-container {
  display: flex;
  align-items: flex-end;
  gap: 0.75rem;
}

.input-action-button {
  padding: 0.5rem;
  color: #6b7280;
  background: none;
  border: none;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s;
}

.input-action-button:hover {
  color: #374151;
  background-color: #f3f4f6;
}

.input-action-button svg {
  width: 1.25rem;
  height: 1.25rem;
}

.textarea-container {
  flex: 1;
  position: relative;
}

.message-textarea {
  width: 100%;
  padding: 0.75rem 1rem;
  border: 1px solid #d1d5db;
  border-radius: 1rem;
  resize: none;
  min-height: 48px;
  max-height: 128px;
  outline: none;
  font-family: inherit;
  font-size: 0.875rem;
}

.message-textarea:focus {
  ring: 2px solid #3b82f6;
  border-color: transparent;
}

.send-button {
  padding: 0.75rem;
  background-color: #3b82f6;
  color: white;
  border: none;
  border-radius: 1rem;
  cursor: pointer;
  transition: background-color 0.2s;
}

.send-button:hover {
  background-color: #2563eb;
}

.send-button:disabled {
  background-color: #d1d5db;
  cursor: not-allowed;
}

.send-button svg {
  width: 1.25rem;
  height: 1.25rem;
}

.input-hint {
  margin-top: 0.5rem;
  font-size: 0.75rem;
  color: #6b7280;
  padding-left: 1rem;
}

/* Responsive design */
@media (min-width: 1024px) {
  .message-container {
    max-width: 448px;
  }
}

/* Scrollbar styling */
.sidebar-content::-webkit-scrollbar,
.messages-area::-webkit-scrollbar {
  width: 6px;
}

.sidebar-content::-webkit-scrollbar-track,
.messages-area::-webkit-scrollbar-track {
  background: #f1f5f9;
}

.sidebar-content::-webkit-scrollbar-thumb,
.messages-area::-webkit-scrollbar-thumb {
  background: #cbd5e1;
  border-radius: 3px;
}

.sidebar-content::-webkit-scrollbar-thumb:hover,
.messages-area::-webkit-scrollbar-thumb:hover {
  background: #94a3b8;
}
